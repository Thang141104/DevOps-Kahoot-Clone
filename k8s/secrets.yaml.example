apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: kahoot-clone
type: Opaque
stringData:
  # MongoDB Connection (Replace with your MongoDB Atlas connection string)
  MONGODB_URI: "mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority"
  
  # JWT Secret (Generate a strong random secret)
  JWT_SECRET: "your-super-secret-jwt-key-change-this-in-production"
  
  # Email Configuration (Use Gmail App Password)
  EMAIL_USER: "your-email@gmail.com"
  EMAIL_PASSWORD: "your-gmail-app-password"
  
  # Session Secret (Generate a strong random secret)
  SESSION_SECRET: "your-session-secret-key-change-in-production"
