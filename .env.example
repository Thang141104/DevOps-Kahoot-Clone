# MongoDB Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123
MONGODB_DATABASE=kahoot

# JWT Secret (MUST be changed in production!)
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_2024

# API Keys
SENDGRID_API_KEY=your-sendgrid-api-key-here
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Redis Password (if using Redis for sessions)
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Encryption Keys
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY

