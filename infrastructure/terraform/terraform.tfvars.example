# Example terraform.tfvars
# Copy this to terraform.tfvars and customize

aws_region = "ap-southeast-1"
project_name = "kahoot-clone"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
availability_zone = "ap-southeast-1a"

# Security - Restrict SSH access for production
# allowed_ssh_cidrs = ["YOUR_IP/32"]  # Your IP only
allowed_ssh_cidrs = ["0.0.0.0/0"]     # Allow from anywhere (dev only)
allowed_http_cidrs = ["0.0.0.0/0"]    # Allow from anywhere

# Ubuntu 22.04 LTS AMI in ap-southeast-1
ami_id = "ami-0fa377108253bf620"

# Instance Configuration
jenkins_instance_type = "t3.medium"
k8s_instance_type = "t3.medium"
k8s_worker_count = 2
